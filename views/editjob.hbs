<h3>Current Job</h3>

<form method="POST" action="/job/edit/{{_id}}?_method=PUT">
  <h4>Job</h4>
  <input type="text" name="job" required="true" value="{{job}}"/>
  <h4>Description</h4>
  <textarea name="description" required="true" rows="5" cols="50" value="{{description}}"/></textarea>
  <input type="submit" value="Edit Job">
</form>

<form action="/job/delete/{{_id}}?_method=DELETE" method="POST">
  <input type="submit" value="Delete Job"/>
</form>

<a href="/dashboard/{{_id}}">
    <button>Return to Dashboard</button>
</a>