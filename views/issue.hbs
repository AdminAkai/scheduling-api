<div class="issues">
    <h1>Issue ID: {{_id}}</h1>

    <p>Description: {{description}}</p>
    <p>Status: {{status}}</p>
    <p>Priority: {{priority}}</p>
    <p>Created At: {{createdAt}}</p>

</div>

<div id="issue-options">

<a href="/issues">
    <button>Return to Dashboard</button>
</a>

<a href="/issues/edit/{{_id}}">
    <button>Edit Issue</button>
</a>

</div>

<form action="/issues/delete/{{_id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete Issue"/>
</form>