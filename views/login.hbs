<div class="login">
<form method="POST" action="/dashboard" class="form">
  <h4>Username</h4>
  <input type="text" name="username" required="true"/>
  <h4>Password</h4>
  <input type="password" name="password"/>
  <input type="submit" class="submit"/>
</form>
</div>

<div class="sign-up">
<form method="POST" action="/users/create" class="form">
  <h4>Username</h4>
  <input type="text" name="username" required="true"/>
  <h4>Email</h4>
  <input type="text" name="email" required="true"/>
  <h4>Password</h4>
  <input type="password" name="password"/>
  <input type="submit" value="Create Account" class="submit"/>
</form>
</div>

